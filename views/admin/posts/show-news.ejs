<%- include('../includes/head') %>

</head>

<body>

  <!-- ======= Header ======= -->
  <%- include('../includes/navigation') %>
  

  <section class="section">
    
    <!--  row -->
    
      <div class="row">
          <div class="col-lg-12 col-sm-12">
              <div class="card">
                  <div class="card-body">
                      <h5 class="card-title">Posts Show Table</h5>
  
                      <!-- Table with hoverable rows -->
                      <table class="table table-hover text-center">
                        <thead>
                          <tr>
                           
                            <th>Title</th>
                            <th>Image</th>
                            <th>Description</th>
                            <th>Date</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <% if(news.length>0) {%>
                        <% for(let postnew of news){ %>
                        <tbody>
                            <tr>
                            <!-- <th scope="row">1</th> -->
                            <td style="font-size:9px"><%= postnew.title.substring(0,15)+"..." %></td>
                            <td><img src="/<%= postnew.image %>" alt="<%= postnew.image %>" class="rounded-circle " style="width:40px; height:40px" ></td>
                            <td style="font-size:9px"><%= postnew.description.substring(0,15)+"..." %></td>
                            <td><%= postnew.date %></td>
                           
                            <td>
                              <a href="/admin/detail-news/<%= postnew._id %>"  class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i>
                              </a>
                              <a href="/admin/edit-news/<%= postnew._id %>?edit=true" class="btn btn-primary btn-sm">
                                <i class="bi bi-upload"></i>
                              </a>
                              <form action="/admin/news-delete" method="post" class="justify-content-end">
                                <input type="hidden" name="newsId" value="<%= postnew._id%>">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button  class="btn btn-danger btn-sm"><i class="bi bi-trash "type="submit"></i></button>
                            </form>
  
                            </td>
                           
                          </tr>
                          
                          
                        </tbody>
                        <% } %>
                            <%- include('../includes/pagination.ejs',{current:current,
                            nextPage:nextPage,
                            previousPage,
                            previousPage, 
                            lastPage:lastPage,
                            hasNextPage:hasNextPage,
                          hasPreviousPage:hasPreviousPage}) %>
                        <!-- end pagination -->
                        <% }else{ %>
                          <h1>News Not Found</h1>
                          <% } %>
                      </table>
                     
                        
  
                  </div>
              </div>
         
      </div>
      <!-- end  row -->
    
  </section>

  <%- include('../includes/foot') %>
  <%- include('../includes/footer') %>