<%- include('../includes/head') %>

</head>

<body>

  <!-- ======= Header ======= -->
  <%- include('../includes/navigation') %>
  

  <section class="section">
   
    <!-- second row -->
   
      <div class="row">
          <div class="col-lg-12 col-sm-12">
              <div class="card">
                  <div class="card-body">
                      <h5 class="card-title">LifeStyle Show Table</h5>
  
                      <!-- Table with hoverable rows -->
                      <table class="table table-hover text-center">
                      
                        <thead>
                          <tr>
                         
                            <th>Title</th>
                            <th>Image</th>
                            <th>Description</th>
                            <th>Date</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <%if (lifestyles.length>0){%>
                        <%for(let lifestyle of lifestyles){%>
                        <tbody>
                          <tr>
                           
                            <td style="font-size:9px"><%= lifestyle.title.substring(0,15)+"..." %></td>
                            <td><img src="/<%= lifestyle.image %>" alt="<%= lifestyle.image %>" class="rounded-circle " style="width:40px; height:40px" ></td>
                            <td style="font-size:9px"><%= lifestyle.description.substring(0,15)+"..." %></td>
                            <td><%= lifestyle.date %></td>
                          
                           
                            <td>
                              <a href="/admin/detail-life/<%= lifestyle._id %>" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i>
                              </a>
                              <a href="/admin/edit-life/<%= lifestyle._id %>?edit=true" class="btn btn-primary btn-sm">
                                  <i class="bi bi-upload"></i>
                              </a>
                              
                              <form action="/admin/delete-life" method="post">
                                <input type="hidden" name="lifeId" value="<%= lifestyle._id %>">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button type="submit" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></button>
                              </form>
  
                            </td>
                          </tbody>
                          <%}%>
                          <%- include('../includes/pagination.ejs',{current:current,
                                nextPage:nextPage,
                                previousPage,
                                previousPage, 
                                lastPage:lastPage,
                                hasNextPage:hasNextPage,
                              hasPreviousPage:hasPreviousPage}) %>
                            <%}else{%>
                              <h1>LifeStyle Not Found</h1>
                            </tr>
                            <%}%>
                          </table>
  
                       
                  </div>
              </div>
          
      </div>
      <!-- end second row -->
     
  </section>

  <%- include('../includes/foot') %>
  <%- include('../includes/footer') %>